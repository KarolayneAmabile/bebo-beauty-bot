package main;

import consoleinterface.Menu;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        int menu;
        do {
            Menu.printMenu();
            Scanner scanner = new Scanner(System.in);
            menu = scanner.nextInt();
            switch (menu) {
                case 1:
                    // Lógica para ver a agenda do dia
                    break;
                case 2:
                    // Lógica para agendar um horário
                    break;
                case 3:
                    // Lógica para cancelar um horário
                    break;
                case 4:
                    break;
                default:
                    System.out.println("Opção inválida.");
            }
        } while (menu != 4);
    }
}